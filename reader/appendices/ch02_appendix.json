        "japanese": "海 が ある！",
        "gloss": "sea [SUBJ] exist",
        "english": "There's a sea!"
      },
      {
        "japanese": "島 が ある。",
        "gloss": "island [SUBJ] exist",
        "english": "There's an island."
      },
      {
        "japanese": "人 が いない。",
        "gloss": "person [SUBJ] not-exist",
        "english": "Nobody is here."
      }
    ]
  },
